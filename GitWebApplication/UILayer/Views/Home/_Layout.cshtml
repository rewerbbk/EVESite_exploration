<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row">
        <div class="col-md-4">
            <a href=@Url.Action("Index", "Home")>Home</a>
        </div>
        <div class="col-md-4">
            <h1>EVE Site</h1>
        </div>
        <div class="col-md-4">
            <br />Login
            <br />APIKey
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <br />Account
            <br />Character
            <br />Corp
            <br />Etc.
        </div>
        <div class="col-md-4">
            @RenderBody()
            @RenderSection("scripts", required: false)
        </div>
    </div>
    <hr />
    <div>
        <footer>
            <p>Version @ViewBag.version &copy; @DateTime.Now.Year - My Custom ASP.NET Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>
